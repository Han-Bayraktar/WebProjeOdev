<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Core Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: rgba(0, 0, 0, 0.5); /* Şeffaflık */
            backdrop-filter: blur(5px); /* Arka plan bulanıklığı */
            padding-top: 20px; /* Navbar yüksekliğini artır */
            padding-bottom: 25px; /* Navbar alt kısmını hizalamak için arttır */
        }
        .btn-custom {
            background-color: black;
            color: white;
            border-radius: 20px;
            padding: 5px 15px;
        }
        .btn-custom:hover {
            background-color: #444;
        }

        /* Logo stilleri */
        .navbar-brand {
            position: relative; /* Logo için konumlandırma */
        }
        .navbar-brand img {
            width: 120px; /* Resmin genişliğini artırın */
            height: 130px; /* Yüksekliği orantılı tutarak genişliği artırın */
            position: absolute;
            top: 90%; /* Yatayda ortalama */
            transform: translateY(-50%); /* Dikeyde tam ortalama */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <!-- Logo -->
            <a class="navbar-brand" href="#">
                <img src="/Resimler/logo.png" alt="Logo" class="d-inline-block align-text-top">
            </a>

            <!-- Toggle for mobile view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Kesim Öner</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Online Randevu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">İletişim</a>
                    </li>
                </ul>

                <!-- Button -->
                <a class="btn btn-custom" href="/Account/Login">Giriş</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container text-center" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
