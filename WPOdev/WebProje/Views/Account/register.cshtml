@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="~/css/login-register.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
    <div class="register">
        <img src="~/Resimler/login.jpeg" alt="register image" class="register__img">

        <form action="" class="register__form">
            <h1 class="register__title">Register</h1>

            <div class="register__content">
                <div class="register__box">
                    <i class="ri-user-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="text" required class="register__input" id="first-name" placeholder=" ">
                        <label for="first-name" class="register__label">First Name</label>
                    </div>
                </div>

                <div class="register__box">
                    <i class="ri-user-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="text" required class="register__input" id="last-name" placeholder=" ">
                        <label for="last-name" class="register__label">Last Name</label>
                    </div>
                </div>

                <div class="register__box">
                    <i class="ri-mail-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="email" required class="register__input" id="register-email" placeholder=" ">
                        <label for="register-email" class="register__label">Email</label>
                    </div>
                </div>

                <div class="register__box">
                    <i class="ri-lock-2-line register__icon"></i>
                    <div class="register__box-input">
                        <input type="password" required class="register__input" id="register-pass" placeholder=" ">
                        <label for="register-pass" class="register__label">Password</label>
                        <i class="ri-eye-off-line register__eye" id="register-eye"></i>
                    </div>
                </div>
            </div>

            <button type="submit" class="register__button">Register</button>

            <p class="register__login">
                Already have an account? <a href="login">Login</a>
            </p>
        </form>
    </div>

    <script src="~/js/login-register.js"></script>
</body>
</html>
